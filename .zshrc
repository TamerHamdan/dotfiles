# —————————————————————————————————————————————————
#                       Config
# —————————————————————————————————————————————————

# Set to superior editing mode
bindkey -v

# —————————————————————————————————————————————————
#                       Aliases
# —————————————————————————————————————————————————

# Most Used #
alias v='nvim'
alias t='tmux'
alias c='clear' 
alias x='exit'               

# Navigation #
alias ..='cd ..'
alias ...='cd ...'

# Git #
alias ga='git add .'
alias gc='git commit -m'
alias gpm='git push origin main'

# Language Specific #
alias py='python3'
alias cc='clang' # [C]ompile [C]

# Extra #
alias r='source ~/.' 
